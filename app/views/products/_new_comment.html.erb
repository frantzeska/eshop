<% if signed_in? %>
  <h5>Add a review:</h5>
  <!--<h4>Add a review:</h4>-->
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <div class= "form-group">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </div>

    <div class= "rating">
    </div>

    <div class= "form-group">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
<% end %>
