<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
        <%= product.name %>
        <%= product.description %>
        <%= product.price %>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
