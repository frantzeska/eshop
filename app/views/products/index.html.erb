<p id="notice"><%= notice %></p>
<div class="products">
  <h1>Products</h1>

  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm">
          <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
          <%= product.name %>
          <%= product.description %>
          <%= product.price %>
        </div><!-- /col -->
      <% end %>
      <%= @test_variable %>
    </div>
  </div>



<br>

<%= link_to 'New Product', new_product_path %>
